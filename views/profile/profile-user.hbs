<section id="user-profil">
  <div class="container-user">
      <div class="container-user-img">
          {{#if user}}
        <img src="{{user.photoUser}}" alt="photo de profil">
      </div>
      <h2>Welcome {{ user.username }}</h2>

      <div class="container-activities-user">
          <article class="activitie">
              <img src="/images/setting.png" alt="logo-account-settings" class="icon">
              <a href="/userProfile/{{user.id}}/account-settings">Account Settings</a>
          </article>
          <article class="activitie">
              <img src="/images/heart-2.png" alt="logo-favorite-recipes" class="icon">
              <a href="/userProfile/{{user.id}}/favorite-recipes">My favorite recipes</a>
          </article>
          <article class="activitie">
              <img src="/images/recipes.png" alt="logo-my-recipes" class="icon">
              <a href="/userProfile/{{user.id}}/my-own-recipes">My created recipes</a>
          </article>
      </div>
{{else}}
    <p>Still no logged in user, sorry!</p>
{{/if}}
  </div>
</section>

