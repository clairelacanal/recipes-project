 <section class="page"> 
  <div id="post-your-recipe">
    <h2>CREATE YOUR RECIPE</h2>
    <div class="formulaire-create-recipe">
      <form action="/create" method="POST" enctype="multipart/form-data">
      
      <label class="form-labels">
        <input class="form-input" type="text" name="title" placeholder="Name of the recipe ">
      </label>

      <label class="form-labels">
        <input class="form-input" type="text" name="readyInMinutes" placeholder="Time to cook">
      </label>

      <div class="container-ingredient">
        <div id="all-ingredients">
        <div class="add-things-ing">
        <label class="form-labels" id="input-parent">
          <input class="form-input" type="text" name="ingredient1" placeholder="Ingredient 1" >
        </label>
      </div>
      </div>
      <a href="javascript: addIngredient()">Add an ingredient</a>
      </div>
      
      
      <div class="container-step">
        <div id="all-steps">
        <div class="add-things">
          <label class="form-labels">
            <input class="form-input" type="text" name="step1" placeholder="Step 1" >
          </label>
        </div>
      </div>
      <a href="javascript: addStep()">Add a step</a>
      </div>
      
      
      <label class="form-labels">
          <input class="form-input" type="file" name="image" class="form-control-file" placeholder="Download a photo" />
      </label>

      <button>SAVE THE RECIPE</button>
    </form>

    </div> 
  </div>
</section>


	





