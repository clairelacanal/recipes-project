<section id="signup-section-settings">
  <h2>Account settings</h2>
  <form action="/userProfile/{{user.id}}/account-settings" method="POST" enctype="multipart/form-data">
    <label class="form-labels">
      <input class="form-input" type="text" name="username" value="{{user.username}}">
    </label>

    <label class="form-labels">
      <input class="form-input" type="email" name="email" value="{{user.email}}">
    </label>

    <label class="form-labels">
      <input class="form-input" type="password" name="password" placeholder="**********" value="{{user.password}}">
    </label>

    <label class="form-labels">
        <input class="form-input" type="file" name="image" value="{{user.photoUser}}" class="form-control-file" />
    </label>


    <button>SAVE CHANGES</button>


    {{#if errorMessage}}
        <p>{{errorMessage}}</p>
    {{/if}}

  </form>
</section>

