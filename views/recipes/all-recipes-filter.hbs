<section id="recipes-page">
  <div id="recipes-filter">
    <form action="/search" method="GET">
      <p>Diets</p>
        <div>
          <input type="checkbox" name="vegetarian" id="vege-diet">
          <label for="vege-diet">Vegetarian</label>
        </div>
        <div>
          <input type="checkbox" name="vegan" id="vegan-diet">
          <label for="vegan-diet">Vegan</label>
        </div>
        <div>
          <input type="checkbox" name="gluten" id="gluten-diet">
          <label for="veg-diet">Gluten Free</label>
        </div>
        <div>
          <input type="checkbox" name="dairy" id="dairy-diet">
          <label for="veg-diet">Dairy Free</label>
        </div>    
      <p>Cuisine</p>  
        <div>
          <input type="checkbox" name="african" id="african-cuisine">
          <label for="african-cuisine">African</label>
        </div>
        <div>
          <input type="checkbox" name="american" id="american-cuisine">
          <label for="american-cuisine">American</label>
        </div>
        <div>
          <input type="checkbox" name="british" id="british-cuisine">
          <label for="british-cuisine">British</label>
        </div>
        <div>
          <input type="checkbox" name="chinese" id="chinese-cuisine">
          <label for="chinese-cuisine">Chinese</label>
        </div>
        <div>
          <input type="checkbox" name="french" id="french-cuisine">
          <label for="french-cuisine">French</label>
        </div>
        <div>
          <input type="checkbox" name="german" id="german-cuisine">
          <label for="german-cuisine">German</label>
        </div>
        <div>
          <input type="checkbox" name="indian" id="indian-cuisine">
          <label for="indian-cuisine">Indian</label>
        </div>
        <div>
          <input type="checkbox" name="italian" id="italian-cuisine">
          <label for="italian-cuisine">Italian</label>
        </div>
        <div>
          <input type="checkbox" name="japanese" id="japanese-cuisine">
          <label for="japanese-cuisine">Japanse</label>
        </div>
        <div>
          <input type="checkbox" name="korean" id="korean-cuisine">
          <label for="korean-cuisine">Korean</label>
        </div>
        <div>
          <input type="checkbox" name="mexican" id="mexican-cuisine">
          <label for="mexican-cuisine">Mexican</label>
        </div>
        <div>
          <input type="checkbox" name="thai" id="thai-cuisine">
          <label for="thai-cuisine">Thai</label>
        </div>
        <div>
          <input type="checkbox" name="viet" id="viet-cuisine">
          <label for="viet-cuisine">Vietnamese</label>
        </div>
      <p>Dish Types</p>
        <div>
          <input type="checkbox" name="main" id="main-type">
          <label for="main-type">Main course</label>
        </div>
        <div>
          <input type="checkbox" name="side" id="side-type">
          <label for="side-type">Side dish</label>
        </div>
        <div>
          <input type="checkbox" name="dessert" id="dessert-type">
          <label for="dessert-type">Dessert</label>
        </div>
        <div>
          <input type="checkbox" name="appetizer" id="appetizer-type">
          <label for="appetizer-type">Appetizer</label>
        </div>
        <div>
          <input type="checkbox" name="salad" id="salad-type">
          <label for="salad-type">Salad</label>
        </div>
        <div>
          <input type="checkbox" name="breakfast" id="breakfast-type">
          <label for="breakfast-type">Breakfast</label>
        </div>
        <div>
          <input type="checkbox" name="soup" id="soup-type">
          <label for="soup-type">Soup</label>
        </div>
      <button>Search</button>
    </form>
    
  </div>
  <div class="recipes-zone">
    {{#each recipes}}
        <div class="card">
            <img src={{image}} class="card-img-top" alt="{{title}}-image">
            <div class="back">
              <p class="card-title">{{title}}</p>
              <p class="card-text">{{readyInMinutes}} min</p>
            </div>
        </div>     
    {{/each}}
  </div>

</section>